
    <div class="wrapper menuWrapper">

        <div class="menuHeadingAndSort">
            <p class="MenuHeading heading-primary"> Our Menu </p>
            <div class="menuSort">
                <!-- 'Breakfast', 'Lunch', 'Dinner', -->
                <a class="sortLink">Breakfast</a>
                <a class="sortLink">Lunch</a>
                <a class="sortLink">Dinner</a>

            </div>
        </div>
        

        <% pizzas.forEach(function(menus) { %>
            <div class="cardWrapper" style="display: unset; height: 100%;">
                <div class="Menucard">
                    <img class="img-container" src="/img/foodPic/<%= menus.image %>" alt="foodImage">

                    <div class="menuTxt" style="height: 100%;">
                        <div class="text">
                            <div class="food-heading">
                                <% if(menus.isVeg == false) { %>
                                    <img src="https://img.icons8.com/color-glass/48/000000/non-vegetarian-food-symbol.png"/>
                                <% } else { %>
                                    <img src="https://img.icons8.com/color-glass/48/000000/vegetarian-food-symbol.png"/>
                                <% } %>
                            
                                <h2 style="font-weight: 500;"><%= menus.name %></h2>
                            </div>
                            
                            <% if(menus.halfFull == true){ %>
                                <div class="half-full">
                                    <button class="btn btnHF half">Half</button>
                                    <button class="btn btnHF full activeHF">Full</button>
                                </div>
                            <% } %>
                            
                            <p class="foodType" style="display: none;"><%=menus.foodType%></p>
                            <p class="description" style="height: 100%;"><%= menus.description %></p>

                            <div class="price-cart-container">
                                <span class="price">â‚¹<%= menus.price %></span>
                                <button data-pizza="<%= JSON.stringify(menus) %>" class="btn-primary add-to-cart">Add to cart</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% })%>

    
    </div>
